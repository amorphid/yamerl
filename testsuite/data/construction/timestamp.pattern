%% vim:ft=erlang:

%% TEST
{setup,
  fun() ->
      application:start(yamerl_the_fork),
      Node_Mods = yamerl_the_fork_app:get_param(node_mods),
      yamerl_the_fork_app:set_param(node_mods, [yamerl_the_fork_node_timestamp]),
      Node_Mods
  end,
  fun(Node_Mods) ->
      yamerl_the_fork_app:set_param(node_mods, Node_Mods)
  end,
  [
    ?_assertMatch(
      [
        [
          {{2011, 5, 26}, undefined},
          {undefined, {14,58,3}},
          {{2011, 5, 26}, {14,58,3}},
          {{2011, 5, 26}, {14,58,3}},
          {{2011, 5, 26}, {14,58,3}},
          "Not a timestamp"
        ]
      ],
      yamerl_the_fork_constr:file("${FILENAME}", [{detailed_constr, false}])
    ),
    ?_assertMatch(
      [
        {yamerl_the_fork_doc,
          {yamerl_the_fork_seq,yamerl_the_fork_node_seq,"tag:yaml.org,2002:seq",
            [{line,1},{column,1}],
            [{yamerl_the_fork_timestamp,yamerl_the_fork_node_timestamp,
                "tag:yamerl_the_fork,2012:timestamp",
                [{line,1},{column,3}],
                2011,5,26,undefined,undefined,undefined,
                0,0},
              {yamerl_the_fork_timestamp,yamerl_the_fork_node_timestamp,
                "tag:yamerl_the_fork,2012:timestamp",
                [{line,2},{column,3}],
                undefined,undefined,undefined,14,58,3,
                0,0},
              {yamerl_the_fork_timestamp,yamerl_the_fork_node_timestamp,
                "tag:yamerl_the_fork,2012:timestamp",
                [{line,3},{column,3}],
                2011,5,26,14,58,3,
                0,0},
              {yamerl_the_fork_timestamp,yamerl_the_fork_node_timestamp,
                "tag:yamerl_the_fork,2012:timestamp",
                [{line,4},{column,3}],
                2011,5,26,14,58,3,
                0,0},
              {yamerl_the_fork_timestamp,yamerl_the_fork_node_timestamp,
                "tag:yamerl_the_fork,2012:timestamp",
                [{line,5},{column,3}],
                2011,5,26,14,58,3,
                0,0},
              {yamerl_the_fork_str,yamerl_the_fork_node_str,"tag:yaml.org,2002:str",
                [{line,7},{column,3}],
                "Not a timestamp"}],
            6}}
      ],
      yamerl_the_fork_constr:file("${FILENAME}", [{detailed_constr, true}])
    )
  ]
}
