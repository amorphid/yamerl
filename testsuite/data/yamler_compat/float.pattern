%% vim:ft=erlang:

%% TEST
{setup,
  fun() ->
      application:start(yamerl_the_fork)
  end,
  [
    ?_assertEqual(
      yaml:load_file("${FILENAME}"),
      yamerl_the_fork_yamler_compat:load_file("${FILENAME}")
    ),
    ?_assertEqual(
      yaml:load_file("${FILENAME}", [
          {schema, yaml_schema_failsafe}
        ]),
      yamerl_the_fork_yamler_compat:load_file("${FILENAME}", [
          {schema, yaml_schema_failsafe}
        ])
    ),
    ?_assertMatch(
      {error, _},
      yaml:load_file("${FILENAME}", [
          {schema, yaml_schema_json}
        ])
    ),
    ?_assertMatch(
      {error, _},
      yamerl_the_fork_yamler_compat:load_file("${FILENAME}", [
          {schema, yaml_schema_json}
        ])
    ),
    ?_assertEqual(
      yaml:load_file("${FILENAME}", [
          {schema, yaml_schema_core}
        ]),
      yamerl_the_fork_yamler_compat:load_file("${FILENAME}", [
          {schema, yaml_schema_core}
        ])
    ),
    ?_assertEqual(
      yaml:load_file("${FILENAME}", [
          {schema, yaml_schema_erlang}
        ]),
      yamerl_the_fork_yamler_compat:load_file("${FILENAME}", [
          {schema, yaml_schema_erlang}
        ])
    )
  ]
}
